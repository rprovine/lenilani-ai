# LeniLani AI Environment Variables
# Copy this file to .env and fill in your values

# Required: Anthropic API Key
# Get yours at: https://console.anthropic.com/api-keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: LangChain API Key for tracing and analytics
# Get yours at: https://smith.langchain.com
LANGCHAIN_API_KEY=your_langchain_api_key_here

# Optional: HubSpot API Key for meeting availability
# Get yours at: HubSpot Settings > Integrations > Private Apps
HUBSPOT_API_KEY=your_hubspot_api_key_here

# HubSpot Meeting Link UUID
HUBSPOT_MEETING_LINK=https://meetings-na2.hubspot.com/reno?uuid=ee86f3dc-1bde-4684-8460-c998aef13e65

# Optional: Server port (default: 3000)
PORT=3000

# Optional: Node environment
# Options: development, production
NODE_ENV=development

# Note: When LANGCHAIN_API_KEY is provided, the following are auto-configured:
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_PROJECT=lenilani-ai